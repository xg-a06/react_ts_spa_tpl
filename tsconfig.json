{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],
    "baseUrl": ".",
    "paths": {"@/*": [ "src/*" ]},
    "types":["react/next", "react-dom/next","node","vite/client"],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "plugins": [{ "name": "typescript-plugin-css-modules","options": {
      "customMatcher": "^(?!.*\\.global).*\\.less$",
    }}],
  },
  "include": [
    "src"
  ]
}
